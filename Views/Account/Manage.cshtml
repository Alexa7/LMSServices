@model LMSServices.Models.LocalPasswordModel
@{
    ViewBag.Title = "Αλλαγή Κωδικού Πρόσβασης";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<p class="message-success">@ViewBag.StatusMessage</p>

<p>Είστε συνδεδεμένος ως <strong>@User.Identity.Name</strong>.</p>

@if (ViewBag.HasLocalPassword)
{
    @Html.Partial("_ChangePasswordPartial")
}
else
{ 
    @Html.Partial("_SetPasswordPartial")
}

